    <link rel="icon" type="image/png" href="/favicon.png" />
    <ViewTransitions />

    <meta name="robots" content="index, follow" />
    <meta name="description" content="Portafolio | Daniel Eduardo Yanes" />
    <meta name="author" content="danyan" />
    <link rel="canonical" href="https://danieleduardo.vercel.app/" />

    <!-- Open graph -->
    <meta property="og:url" content="https://danieleduardo.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Portafolio | Daniel Eduardo Yanes" />
    <meta
      property="og:description"
      content="Portafolio | Daniel Eduardo Yanes"
    />
    <meta
      property="og:image"
      content="https://danieleduardo.vercel.app/img/screenshot.png"
    />
