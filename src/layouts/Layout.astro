---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { ViewTransitions } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link
      rel="icon"
      type="image/png"
      href="https://img.icons8.com/ios-filled/100/portfolio.png"
    />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />

    <meta name="robots" content="index, follow" />
    <meta name="description" content="Portafolio Daniel Eduardo Yanes" />
    <meta name="author" content="EduardYan" />
    <link rel="canonical" href="https://daniel-eduardo-yanes.vercel.app/" />

    <!-- Open graph -->
    <meta
      property="og:url"
      content="https://daniel-eduardo-yanes.vercel.app/"
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Portafolio | Daniel Eduardo Yanes" />
    <meta
      property="og:description"
      content="Academia de Inglés y Computación"
    />
    <meta
      property="og:image"
      content="https://daniel-eduardo-yanes.vercel.app/public/img/screenshot.png"
    />
    <meta property="og:site_name" content="Portafolio | Daniel Eduardo Yanes" />
    <meta property="og:image:alt" content="Previsualización de la web" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="daniel-eduardo-yanes.vercel.app" />
    <meta
      property="twitter:url"
      content="https://daniel-eduardo-yanes.vercel.app/"
    />
    <meta name="twitter:title" content="Portafolio | Daniel Eduardo Yanes" />
    <meta
      name="twitter:description"
      content="Portafolio Daniel Eduardo Yanes"
    />
    <meta
      name="twitter:image"
      content="https://daniel-eduardo-yanes.vercel.app/public/img/screenshot.png"
    />
  </head>
  <body>
    <slot />
  </body>
</html>
